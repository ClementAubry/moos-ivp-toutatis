<xmldoc>
  <moosapp>

     <info>
        <name>iRosen</name>
        <organization>Toutatis AUVs - ENSTA Bretagne</organization>
        <date>2015</date>
        <authors>
           <author>Simon Rohou</author>
        </authors>
        <licence>MIT</licence>
     </info>

     <documentation>
        <synopsis>
          The iRosen application is used to control main functionalities of ROSEN AUV. It is used as a connection with thrusters, sensors power and basic electronic via the Pololu Maestro device.
        </synopsis>
        <interface>
           <subscriptions>
              <moosvar>
                 <varname>POWER_MODEM</varname>
                 <vartype>int</vartype>
                 <varinfo>0 for power-off request, 1 otherwise</varinfo>
              </moosvar>
              <moosvar>
                 <varname>POWER_MODEM_EA</varname>
                 <vartype>int</vartype>
                 <varinfo>0 for power-off request, 1 otherwise</varinfo>
              </moosvar>
              <moosvar>
                 <varname>POWER_SONAR</varname>
                 <vartype>int</vartype>
                 <varinfo>0 for power-off request, 1 otherwise</varinfo>
              </moosvar>
              <moosvar>
                 <varname>POWER_ECHOSOUNDER</varname>
                 <vartype>int</vartype>
                 <varinfo>0 for power-off request, 1 otherwise</varinfo>
              </moosvar>
           </subscriptions>
           <publications>
              <moosvar>
                 <varname>ROSEN_POLOLU_STATUS</varname>
                 <vartype>string</vartype>
                 <varinfo>message in case of error, "ok" otherwise</varinfo>
              </moosvar>
              <moosvar>
                 <varname>POWERED_MODEM</varname>
                 <vartype>int</vartype>
                 <varinfo>0 for power-off success, 1 for power-on success, -1 for an error</varinfo>
              </moosvar>
              <moosvar>
                 <varname>POWERED_MODEM_EA</varname>
                 <vartype>int</vartype>
                 <varinfo>0 for power-off success, 1 for power-on success, -1 for an error</varinfo>
              </moosvar>
              <moosvar>
                 <varname>POWERED_SONAR</varname>
                 <vartype>int</vartype>
                 <varinfo>0 for power-off success, 1 for power-on success, -1 for an error</varinfo>
              </moosvar>
              <moosvar>
                 <varname>POWERED_ECHO_SOUNDER</varname>
                 <vartype>int</vartype>
                 <varinfo>0 for power-off success, 1 for power-on success, -1 for an error</varinfo>
              </moosvar>
           </publications>
        </interface>
        <!-- if there is a bug or a special fact to know.. -->
        <optional-comments>
           No comment.
        </optional-comments>
        <!-- if something can be improved -->
        <suggested-improvements>
           No suggested improvements.
        </suggested-improvements>
     </documentation>

  </moosapp>
</xmldoc>
